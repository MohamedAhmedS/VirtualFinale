<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.example.virtualmeetingapp.activites.OfficersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="2">

        <carbon.widget.Button
            android:id="@+id/addPrisoners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pager_bg"
            android:elevation="4dp"
            android:padding="15dp"
            android:text="Add Prisoners"
            android:textColor="#ae863b"
            android:textSize="15sp"
            app:carbon_cornerRadius="15dp" />

        <carbon.widget.Button
            android:id="@+id/viewList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pager_bg"
            android:elevation="4dp"
            android:padding="15dp"
            android:text="view List"
            android:textColor="#ae863b"
            android:textSize="15sp"
            app:carbon_cornerRadius="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="2">

        <carbon.widget.Button
            android:id="@+id/approveVisitorsAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pager_bg"
            android:elevation="4dp"
            android:padding="15dp"
            android:text="Appointments"
            android:textColor="#ae863b"
            android:textSize="15sp"
            app:carbon_cornerRadius="15dp" />

        <carbon.widget.Button
            android:id="@+id/viewConversations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pager_bg"
            android:elevation="4dp"
            android:padding="15dp"
            android:text="Chats"
            android:textColor="#ae863b"
            android:textSize="15sp"
            app:carbon_cornerRadius="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="2">

        <carbon.widget.Button
            android:id="@+id/btnOngoingAppointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pager_bg"
            android:elevation="4dp"
            android:padding="15dp"
            android:text="Ongoing Appointments"
            android:textColor="#ae863b"
            android:textSize="15sp"
            app:carbon_cornerRadius="15dp" />

        <carbon.widget.Button
            android:id="@+id/logoutOfficer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pager_bg"
            android:elevation="4dp"
            android:padding="15dp"
            android:text="Logout"
            android:textColor="#ae863b"
            android:textSize="15sp"
            app:carbon_cornerRadius="15dp" />

    </LinearLayout>


</LinearLayout>