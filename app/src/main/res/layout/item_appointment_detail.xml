<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <TextView
        android:id="@+id/tvCallType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Call Type" />

    <TextView
        android:id="@+id/tvVisitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@id/tvCallType"
        app:layout_constraintTop_toBottomOf="@id/tvCallType"
        tools:text="Visitor Name" />

    <TextView
        android:id="@+id/tvPrisoner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@id/tvCallType"
        app:layout_constraintTop_toBottomOf="@id/tvVisitor"
        tools:text="Prisoner Name" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@id/tvCallType"
        app:layout_constraintTop_toBottomOf="@id/tvPrisoner"
        tools:text="Start Time" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@id/tvCallType"
        app:layout_constraintTop_toBottomOf="@id/tvStartTime"
        tools:text="End Time" />


</androidx.constraintlayout.widget.ConstraintLayout>